system observer;
    /* CIF TEXT (144, 214), (507, 136) */
    use datamodel comment 'observer.asn';
    
    signal ping_in(MyInteger) renames input ping from controller to actuator;
    /* CIF ENDTEXT */
    channel c
        from env to observer with ping_in;
    endchannel;
    block observer;
        signalroute r
            from env to observer with ping_in;
        connect c and r;
        /* CIF PROCESS (259, 87), (150, 75) */
        process observer;
            /* CIF TEXT (0, 57), (256, 112) */
            monitor st System_State;
            
            monitor event Observable_Event;
            
            successstates found;
            /* CIF ENDTEXT */
            /* CIF START (106, 263), (70, 35) */
            START;
                /* CIF NEXTSTATE (106, 318), (70, 35) */
                NEXTSTATE Wait;
            /* CIF state (572, 292), (70, 35) */
            state Wait;
                /* CIF input (548, 347), (111, 35) */
                input ping_in(param);
                    /* CIF decision (563, 402), (81, 50) */
                    decision param = 5;
                        /* CIF ANSWER (527, 472), (70, 23) */
                        (true):
                            /* CIF NEXTSTATE (527, 515), (70, 35) */
                            NEXTSTATE found;
                        /* CIF ANSWER (617, 472), (70, 23) */
                        (false):
                            /* CIF NEXTSTATE (617, 515), (70, 35) */
                            NEXTSTATE Wait;
                    enddecision;
            endstate;
            /* CIF state (530, 103), (70, 35) */
            state found;
            endstate;
        endprocess observer;
    endblock;
endsystem;